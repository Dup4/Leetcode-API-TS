{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowJs": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
    },
    "exclude": [
        "./dist",
        "./test",
    ]
}

