{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": false,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist/esm",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ],
    },
    "include": [
        "./src",
    ],
    "exclude": [
        "./dist",
        "./test",
    ],
    "ts-node": {
        "transpileOnly": true,
        "require": [
            "typescript-transform-paths/register"
        ],
    }
}
